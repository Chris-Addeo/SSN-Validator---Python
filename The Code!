counter = 0
while counter < 5:
    #Preparing Variables and Resetting Counter
    counter = 0
    digit = True
    hyphen = True
    area = True
    group = True
    num = input("What is your SSN? (Format: ###-##-####): ")
    
    #Only digits?
    if num.isnumeric() == True:
        counter += 1
    elif num.isnumeric() == False and "-" in num:
        counter += 1
    else:
        digit = False
        print("Invalid SSN, try again! Only digits allowed.", end="")
    
    #Hyphens included?
    if "-" in num:
        counter += 1
    else:
        hyphen = False
        if digit == False:
            print(" Missing hyphen(s).")
        else:
            print("Invalid SSN, try again! Missing hyphen(s).", end="")
    
    #Area number violated?
    if digit == True and hyphen == True:
        a_num = int(num[0:3])
        if a_num == 000 or a_num == 666 or 900 <= a_num <= 999:
            area = False
            if digit == False or hyphen == False:
                print(" Area number violated.")
            else:
                print("Invalid SSN, try again! Area number violated.", end="")
        else:
            counter += 1
                
        #Group number violated?
        g_num = int(num[4:6])
        if 1 <= a_num <= 499: #(Area Num Must Be Even)
            if g_num % 2 == 0:
                counter += 1
            else:
                group = False
                if digit == False or hyphen == False or area == False:
                    print(" Group number violated.")
                else:
                    print("Invalid SSN, try again! Group number violated.", end="")
        else: #(Area Num Must Be Odd)
            if g_num % 2 != 0:
                counter += 1
            else:
                group = False
                if digit == False or hyphen == False or area == False:
                    print(" Group number violated.")
                else:
                    print("Invalid SSN, try again! Group number violated.", end="")
        
        #Too long?
        if len(num) == 11:
            counter += 1
        else:
            if len(num) < 11:
                print(" SSN too small.")
            elif len(num) > 11:
                print(" SSN too big.")
            else:
                print("Invalid SSN, try again! Missing hyphen(s).", end="")   
    print("\n")

print("Valid SSN")
